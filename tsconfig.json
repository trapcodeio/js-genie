{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "declaration": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      "@types/node",
    ],
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "tsup.config.ts",
    "tests",
    "scripts",
//    "package.json"
  ]
}